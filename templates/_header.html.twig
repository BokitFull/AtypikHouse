        <ul id="menu-box">
            <li class="nav-item">
                <a class="nav-link fs-5 green-text" href="/">Destinations <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link fs-5 green-text" href="{{ path('habitats_index') }}">Hébergements <span class="sr-only">(current)</span></a>
