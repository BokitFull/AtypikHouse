<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}AtypikHouse!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            {% if not app.user or app.user.roles == ["ROLE_USER"] %}
                {{ include('_header.html.twig') }}
            {% elseif app.user.roles == ["ROLE_HOTE"] %}
                {{ include('hotes/_nav.html.twig') }}
            {% endif %}
        </header>
        <section id="main-container">
            {% block body %}{% endblock %}
        </section>
        <footer>
            {{ include('_footer.html.twig') }}
        </footer>
    </body>
</html>
