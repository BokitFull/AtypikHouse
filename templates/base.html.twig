<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}AtypikHouse!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('navbar') }}
        {% endblock %}
        
        <script type="text/javascript">

            $(document).ready(function() {

                $(".nav-link").on("click", function() {
                    console.log(this);

                    $(".nav-link.selected").each(function() { $(this).removeClass("selected"); })

                    $(this).addClass("selected");
                });
            })
        </script> 
        
    </head>
    <header>
        <nav class="nav-col">
            <div class="nav-col-logo">
                <a href="/">
                    <img src="{{ asset('images/atypik_long-removebg-preview.654ec52f.png') }}" class="nav-logo">
                </a>
            </div>
            <div id="nav-col-menu">
                <input id="menu-toggle" type="checkbox" />
                <label id="menu-btn" for="menu-toggle">
                    <span id="first-pan"></span>
                    <span id="burger"></span>
                    <span id="second-pan"></span>
                </label>
                <ul id="menu-box">
    </head>
    <body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('home') }}">
                <img id="imgLogo" src="/images/atypik_long_transparent.png" alt="logo_long">
                {# <img src="{{ asset('/images/atypik_long.png') }}" alt="logo_long" width="80%"> #}
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon fa fa-bars"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link fs-5 green-text" href="/">Destinations <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fs-5 green-text" href="{{ path('habitat.index') }}">Hébergements <span class="sr-only">(current)</span></a>

                    </li>
                    <li class="nav-item">
                        <a class="nav-link fs-5 green-text" href="/">Contact<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item d-md-none">
                        <a class="nav-link fs-5 green-text" href="{{ path('hote_presentation') }}">Devenir hôte<span class="sr-only">(current)</span></a>
                    </li>
                </ul>
            </div>
            {{ render(controller('App\\Controller\\UtilisateursController::userNav')) }}
        </nav>
    </header>
    <body>
        <div id="main-container">
            {% block content %}{% endblock %}
        </div>
    </body>
    <footer>
        <div id="footer-div">
            <span>Copyright 2022 - Tout droits réservés</span>
            <a rel="Mentions légales" href="#">Mentions légales</a>
            <a rel="Confidentialités" href="#">Confidentialités</a>
        </div>
    </footer>
</html>
