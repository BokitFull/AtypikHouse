{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
	{{ encore_entry_link_tags('home') }}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('homeJs') }}
{% endblock %}

{% block title %}AtypikHouse!
{% endblock %}

{% block body %}
	<div class="container">

		<div class="bg-image" >
		<img src="{{ asset('images/home_pictures.jpg') }}" alt=" home banniere"/> </div>

		<div class="messageHome">

			<h2>
				A la découverte de nouvelles expériences
			</h2>
		</div>


		<div class="formCenter page-Acceuil">

			<form class="form-home" action="/habitats" method="GET">

				<select name="code_postal" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
					<option value="" selected>
						Destinations
					</option>
					{% for departement  in habitats %}
						<option  value={{departement.codePostal}}>({{departement.codePostal|slice(0,2)}})</option>
					{% endfor %}
				</select>


				<select name="type_habitat_id" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
					<option value="" selected>
						Hébergement
					</option>
					{% for typeHebergement  in TypesHabitat %}
						<option  value={{typeHebergement.id}}>{{typeHebergement.nom}}</option>
					{% endfor %}
				</select>

				<select name="nb_personnes" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
					<option value="" selected>
						Combien de Personnes ?
					</option>
					{% for i in 1..10 %}
						<option  value={{i}}>{{i}}</option>
					{% endfor %}
				</select>
				
                <input type="input" name="daterange" value="" />

				<label class="white-text">Prix</label>
				<input type="range" name="prix" value="20" min="10" max="300" oninput="this.nextElementSibling.value = this.value" />
				<output class="white-text">20</output><span class="white-text">&euro;</span>


				<div class="filtre-buttons">
					<input value="Rechercher" type="submit" class="btn btn-notdark">
					
				</div>
			</form>


		</div>
	</div>

