{% extends 'base.html.twig' %}

{% block title %}AtypikHouse!
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}

{% block body %}
	<div class="container">

		<div class="bg-image" style="background-image: url('https://www.cosycamp.com/wp-content/uploads/2020/01/week-end-insolite-en-auvergne.jpg');"></div>

		<div class="messageHome">

			<h2>
				A la découverte de nouvelles expériences
			</h2>
		</div>


		<div class="formCenter page-Acceuil">

			<form class="form-home" action="/habitats" method="GET">

				<select name="dep" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
					<option selected>
						Destinations
					</option>
					{% for departement  in habitats %}
						<option  value={{departement.codePostal}}>({{departement.codePostal|slice(0,2)}})</option>
					{% endfor %}
				</select>


				<select name="type" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
					<option selected>
						Hébergement
					</option>
					{% for habitat in habitats %}
						<option  value={{ habitat.TypeHabitat.libelle|default }}>{{ habitat.TypeHabitat.libelle|default }}</option>
					{% endfor %}
				</select>

					<select name="nombre" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
					<option selected>
						Combien de Personnes ?
					</option>
					{% for i in 1..10 %}
						<option  value={{i}}>{{i}}</option>
					{% endfor %}
				</select>

				<input class="custom-select" type="date" id="start">
				<input class="custom-select" type="date" id="end">

				<div class="filtre-buttons">
					<input value="Rechercher" type="submit" class="btn btn-notdark">
					
				</div>
			</form>


		</div>
	</div>

