{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
   {{ encore_entry_link_tags('home') }}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('homeJs') }}
{% endblock %}

{% block title %}AtypikHouse!
{% endblock %}

{% block body %}


	<div class="container">

		<div class="bg-image" >
		<img src="https://c4.wallpaperflare.com/wallpaper/644/970/427/lights-trees-yellow-cozy-wallpaper-preview.jpg" alt=" home banniere"/> </div>

		<div class="messageHome">

			<h2>
				A la découverte de nouvelles expériences
			</h2>
		</div>


		<div class="formCenter page-Acceuil">

			<form class="form-home" action="/habitats" method="GET">

				<select name="code_postal" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
					<option selected>
						Destinations
					</option>
					{% for departement  in habitats %}
						<option  value={{departement.codePostal}}>{{departement.codePostal|slice(0,2)}}</option>
					{% endfor %}
				</select>


				<select name="type_habitat_id" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
					<option selected>
						Hebergement
					</option>
					{% for typeHebergement  in TypesHabitat %}
						<option  value={{typeHebergement.id}}>{{typeHebergement.nom}}</option>
					{% endfor %}
				</select>

					<select name="nombre_personnes_max" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
					<option selected>
						Combien de Personnes ?
					</option>
					{% for nombreDepersonne  in habitats %}
						<option  value={{nombreDepersonne.nbPersonnes}}>{{nombreDepersonne.nbPersonnes}}</option>
					{% endfor %}
				</select>
				
                <input type="text" name="daterange" value="" />


				<div class="filtre-buttons">
					<input value="Rechercher" type="submit" class="btn btn-notdark">
					
				</div>
			</form>


		</div>
	</div>

	<div class="trait trait home">

		<hr class="traithome">

	</div>

