{% extends 'base.html.twig' %}

{% block title %}Habitats{% endblock %}

{% block body %}
    <h1>Habitats</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ habitat.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ habitat.libelle }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ habitat.adresse }}</td>
            </tr>
            <tr>
                <th>Code_postal</th>
                <td>{{ habitat.codePostal }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ habitat.ville }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ habitat.pays }}</td>
            </tr>
            <tr>
                <th>Est_disponible</th>
                <td>{{ habitat.estDisponible ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ habitat.createdAt ? habitat.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_habitats_index') }}">back to list</a>

    <a href="{{ path('app_habitats_edit', {'id': habitat.id}) }}">edit</a>

    {{ include('habitats/_delete_form.html.twig') }}
{% endblock %}
