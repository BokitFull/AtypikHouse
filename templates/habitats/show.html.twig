{% extends 'base.html.twig' %}

{% block title %}Habitat {{ habitat.id}}{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('habitat_show') }}
{% endblock %}


{% block body %}

    <div class="row">

        <div class="col-12">
            <h2>{{habitat.libelle}}</h2>
        </div>

        <div class="col-12">
            <div class="row">
                <div class="col-3 d-none d-lg-block image-side">
                    {% if (habitat.images[0]["url"]|default) %}
                        <div class="d-flex justify-content-center mb-2">
                            <img src="{{ habitat.images[0]["url"] }}" class="img-fluid" title="{{habitat.images[0]["title"]}}" alt="image-habitat-1">
                        </div> 
                    {% else %}
                        <div class="d-flex justify-content-center mb-2">
                            <img src="/images/default.png" class="img-fluid" title="default" alt="image-habitat-1">
                        </div> 
                    {% endif %}

                    {% if (habitat.images[1]["url"]|default) %}
                        <div class="d-flex justify-content-center mt-2">
                            <img src="{{ habitat.images[1]["url"] }}" class="img-fluid" title="{{habitat.images[1]["title"]}}" alt="image-habitat-2">
                        </div> 
                    {% else %}
                        <div class="d-flex justify-content-center mt-2">
                            <img src="/images/default.png" class="img-fluid" title="default" alt="image-habitat-2">
                        </div> 
                    {% endif %}
                </div>

                <div class="col-lg-6 col-sm-12 image-central">

                    {% if (habitat.images[3]["url"]|default) %}
                        <div class="d-flex justify-content-center">
                            <img src="{{ habitat.images[3]["url"] }}" class="img-fluid" title="{{habitat.images[3]["title"]}}" alt="image-habitat-3">
                        </div> 
                    {% else %}
                        <div class="d-flex justify-content-center">
                            <img src="/images/default.png" class="img-fluid" title="default" alt="image-habitat-3">
                        </div> 
                    {% endif %}

                </div>

                <div class="col-3 d-none d-lg-block image-side">

                    {% if (habitat.images[4]["url"]|default) %}
                        <div class="d-flex justify-content-center mb-2">
                            <img src="{{ habitat.images[4]["url"] }}" class="img-fluid" title="{{habitat.images[4]["title"]}}" alt="image-habitat-4">
                        </div> 
                    {% else %}
                        <div class="d-flex justify-content-center mb-2">
                            <img src="/images/default.png" class="img-fluid" title="default" alt="image-habitat-4">
                        </div> 
                    {% endif %}

                    {% if (habitat.images[5]["url"]|default) %}
                        <div class="d-flex justify-content-center mt-2">
                            <img src="{{ habitat.images[5]["url"] }}" class="img-fluid" title="{{habitat.images[5]["title"]}}" alt="image-habitat-5">
                        </div> 
                    {% else %}
                        <div class="d-flex justify-content-center mt-2">
                            <img src="/images/default.png" class="img-fluid" title="default" alt="image-habitat-5">
                        </div> 
                    {% endif %}
                </div>

                {% if (habitat.images is not empty and habitat.images|length > 5) %}
                    <div class="row col-12 mt-2">
                        <div class="col-3 col-lg-5"></div>
                        <div class="col-6 col-lg-2 text-center">
                            <button type="button" class="button" data-bs-toggle="modal" data-bs-target="#modalImages">Voir plus</button>

                            <div class="modal fade" id="modalImages" tabindex="-1" aria-labelledby="modalImagesLabel" aria-hidden="true">
                                <div class="modal-dialog modal-lg modal-dialog-scrollable">
                                    <div class="modal-content site-background-color">
                                        <div class="modal-header">
                                            <h5 class="modal-title w-100 text-center">Toutes les images</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body row">
                                            {% for image in habitat.images %}
                                                <div class="col-6 mb-2">
                                                    <img src="{{ image["url"] }}" class="img-fluid" title="{{image["title"]}}" alt="image-habitat">
                                                </div>  
                                            {% endfor %}
                                        </div>
                                        <div class="modal-footer">
                                        </div>
                                    </div>  
                                </div>
                            </div> 
                        </div>
                        <div class="col-3 col-lg-5"></div>
                    </div>                  
                {% endif %}

            </div>

        </div>

        {# Bloc de séparateur #}
        <div class="col-3"></div>
        <div class="col-6"><hr class="separator" size="7"></div>
        <div class="col-3"></div>

        <div class="col-12">
            <h4>L'hébergement : <span>{{ habitat.nombrePersonnesMax }} personnes - {{ habitat.informationsSupplementaires|join(" - ") }}</span></h4>

            <p><h5>{{habitat.descriptionTitle}}</h5></p>
            <p>{{habitat.description}}</p>
        </div>

        {# Bloc de séparateur #}
        <div class="col-3"></div>
        <div class="col-6"><hr class="separator" size="7"></div>
        <div class="col-3"></div>
        
        <div class="col-12">
            <div class="row">

                <div class="col-lg-6 col-sm-12 mb-2 mb-lg-0">

                    <h4>Équipements et services</h4>
                    <div class="row w-100">
                        {% if (habitat.equipements is empty) %}
                            <div class="col-12">
                                <span>Aucun équipement ou service</span>
                            </div>
                        {% else %}
                            {% for equipement in habitat.equipements|slice(0, 4) %}
                                <div class="col-6">
                                    <span>{{ equipement.libelle }}</span>
                                </div>
                            {% endfor %}

                            {% if (habitat.equipements.count > 4) %}
                                <div class="col-12 mt-3">
                                    <button type="button" class="button" data-bs-toggle="modal" data-bs-target="#modalEquipements">Voir plus</button>

                                    <div class="modal fade" id="modalEquipements" tabindex="-1" aria-labelledby="modalEquipementsLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-md modal-dialog-scrollable">
                                            <div class="modal-content site-background-color">
                                                <div class="modal-header">
                                                    <h5 class="modal-title w-100 text-center">Tous les équipements</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <ul>
                                                        {% for equipement in habitat.equipements %}
                                                            <li>
                                                                <div>
                                                                    <span>{{ equipement.libelle }}</span>
                                                                </div>
                                                            </li>
                                                        {% endfor %}
                                                    </ul>
                                                </div>
                                                <div class="modal-footer">
                                                </div>
                                            </div>  
                                        </div>
                                    </div>  
                                </div>
                            {% endif %}
                        {% endif %}
                    </div>
                </div>

                <div class="col-lg-6 col-sm-12 mt-2 mt-lg-0">

                    <h4>Informations pratiques</h4>
                    <div class="row w-100">
                    {% if habitat.informationsPratiques is empty %}
                        <div class="col-12">
                            <span>Aucune information supplémentaire</span>
                        </div>
                    {% else %}

                        {% for information in habitat.informationsPratiques|slice(0, 4) %}
                            <div class="col-6">
                                <span>{{ information.libelle }}</span>
                            </div>
                        {% endfor %}

                        {% if (habitat.informationsPratiques.count > 4) %}
                            <div class="col-12 mt-3">
                                <button type="button" class="button" data-bs-toggle="modal" data-bs-target="#modalInformations">Voir plus</button>

                                <div class="modal fade" id="modalInformations" tabindex="-1" aria-labelledby="modalInformationsLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-md modal-dialog-scrollable">
                                        <div class="modal-content site-background-color">
                                            <div class="modal-header">
                                                <h5 class="modal-title w-100 text-center">Toutes les informations pratiques</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <ul>
                                                    {% for information in habitat.informationsPratiques %}
                                                        <li>
                                                            <div>
                                                                <span>{{ information.libelle }}</span>
                                                            </div>
                                                        </li>
                                                    {% endfor %}
                                                </ul>
                                            </div>
                                            <div class="modal-footer">
                                            </div>
                                        </div>  
                                    </div>
                                </div> 
                            </div>
                        {% endif %}
                    {% endif %}
                    </div> 
                </div>
            </div>
        </div>

        {# Bloc de séparateur #}
        <div class="col-3"></div>   
        <div class="col-6"><hr class="separator" size="7"></div>
        <div class="col-3"></div>

        <div class="row col-12">
            <h4>Notes et avis</h4>
            <div class="row col-lg-6 col-sm-12 align-items-end">
                <p class="d-flex col-12 justify-content-center">
                    <span class="border border-2 border-success rounded-circle p-3 fs-1">{{notes[0]["note_generale"]|number_format(1, '.', ' ')}}</span>
                </p>
                <div class="d-flex col-12 align-items-center">
                    <span class="col-3">Propreté</span>
                    <div class="col-sm-7 d-sm-block">
                        <span><hr class="horizontal-lign green-text" size="5" style="width: {{ notes[0]["note_proprete"] * 100 / 5 }}%;"></span>
                    </div>
                    <span class="col-9 col-sm-2 text-center fs-4">{{notes[0]["note_proprete"]|number_format(1, '.', ' ')}}</span>
                </div>
                <div class="d-flex col-12 align-items-center">
                    <span class="col-3">Accueil</span>
                    <div class="col-sm-7 d-sm-block">
                        <span><hr class="horizontal-lign green-text" size="5" style="width: {{ notes[0]["note_accueil"] * 100 / 5 }}%;"></span>
                    </div>
                    <span class="col-9 col-sm-2 text-center fs-4">{{notes[0]["note_accueil"]|number_format(1, '.', ' ')}}</span>
                </div>
                <div class="d-flex col-12 align-items-center">
                    <span class="col-3">Emplacement</span>
                    <div class="col-sm-7 d-sm-block">
                        <span><hr class="horizontal-lign green-text" size="5" style="width: {{ notes[0]["note_emplacement"] * 100 / 5 }}%;"></span>
                    </div>
                    <span class="col-9 col-sm-2 text-center fs-4">{{notes[0]["note_emplacement"]|number_format(1, '.', ' ')}}</span>
                </div>
                <div class="d-flex col-12 align-items-center">
                    <span class="col-3">Qualité/Prix</span>
                    <div class="col-sm-7 d-sm-block">
                        <span><hr class="horizontal-lign green-text" size="5" style="width: {{ notes[0]["note_qualite_prix"] * 100 / 5 }}%;"></span>
                    </div> 
                    <span class="col-9 col-sm-2 text-center fs-4">{{notes[0]["note_qualite_prix"]|number_format(1, '.', ' ')}}</span>
                </div>
                <div class="d-flex col-12 align-items-center">
                    <span class="col-3">Équipements</span>
                    <div class="col-sm-7 d-sm-block">
                        <span><hr class="horizontal-lign green-text" size="5" style="width: {{ notes[0]["note_equipements"] * 100 / 5 }}%;"></span>
                    </div>
                    <span class="col-9 col-sm-2 text-center fs-4">{{notes[0]["note_equipements"]|number_format(1, '.', ' ')}}</span>
                </div>
            </div> 

            <div class="row col-lg-6 col-sm-12 align-items-end mt-4 mt-lg-auto">

                {% if (commentaires is not empty) %}

                    {% for commentaire in commentaires|slice(0, 3) %}
                        
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">

                                {% if commentaire.utilisateur.image is empty %}
                                <img src="/images/profile-picture.jpg" class="rounded-circle profile-picture" alt="image_profil">
                                {% else %}
                                <img src="{{commentaire.utilisateur.image}}" class="rounded-circle profile-picture" alt="image_profil">
                                {% endif %}
                                <span>{{commentaire.utilisateur.nom}}&nbsp;{{commentaire.utilisateur.prenom}}</span>
                                </h5>
                                

                                <span class="card-subtitle small green-text">
                                    {% if commentaire.commentaireParent is not empty %}
                                    <i class="fas fa-level-down-alt" style="transform: scaleX(-1) rotate(90deg);"></i>
                                    <i class="small">Réponse à {{ commentaire.commentaireParent.utilisateur.nom }} {{ commentaire.commentaireParent.utilisateur.prenom }}</i><br>
                                    {% endif %}

                                    {{commentaire.createdAt|date('M-Y')}}
                                </span>
                                
                                
                                <p class="card-text">{{commentaire.commentaire|slice(0, 57)}}
                                {% if commentaire.commentaire|length > 57 %}
                                    ...
                                {% endif %}
                                    
                                </span>
                            </div>
                        </div>
                    {% endfor %}

                    {% if commentaires|length > 3 %}

                    <div class="col-12 float-end mt-3">
                        <button type="button" class="button" data-bs-toggle="modal" data-bs-target="#modalCommentaires">Plus d'avis</button>

                        <div class="modal fade" id="modalCommentaires" tabindex="-1" aria-labelledby="modalCommentaireysLabel" aria-hidden="true">
                            <div class="modal-dialog modal-lg modal-dialog-scrollable">
                                <div class="modal-content site-background-color">
                                    <div class="modal-header">
                                        <h5 class="modal-title w-100 text-center">Les commentaires</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            {% for commentaire in commentaires %}
                                                {% if commentaire.commentaireParent is empty %}
                                                <div class="card col-12">
                                                    <div class="card-body">
                                                        <h5 class="card-title">

                                                        {% if commentaire.utilisateur.image is empty %}
                                                        <img src="/images/profile-picture.jpg" class="rounded-circle profile-picture" alt="image_profil">
                                                        {% else %}
                                                        <img src="{{commentaire.utilisateur.image}}" class="rounded-circle profile-picture" alt="image_profil">
                                                        {% endif %}
                                                        <span>{{commentaire.utilisateur.nom}}&nbsp;{{commentaire.utilisateur.prenom}}</span>
                                                        </h5>

                                                        <span class="card-subtitle small green-text">{{commentaire.createdAt|date('M-Y')}}</span>

                                                        <p class="card-text">{{commentaire.commentaire}}
                                                        
                                                        </span>
                                                    </div>
                                                </div>
                                                {% endif %}

                                                {% if commentaire.commentaires is not empty %}
                                                    {% for reponse in commentaire.commentaires %}
                                                    
                                                    {% if reponse.commentaireParent.commentaireParent is empty %}
                                                    <div class="card col-12">
                                                        <div class="card-body">
                                                            <h5 class="card-title">

                                                            {% if reponse.utilisateur.image is empty %}
                                                            <img src="/images/profile-picture.jpg" class="rounded-circle profile-picture" alt="image_profil">
                                                            {% else %}
                                                            <img src="{{reponse.utilisateur.image}}" class="rounded-circle profile-picture" alt="image_profil">
                                                            {% endif %}
                                                            <span>{{reponse.utilisateur.nom}}&nbsp;{{reponse.utilisateur.prenom}}</span>
                                                            </h5>

                                                            <span class="card-subtitle small green-text">
                                                            <i class="fas fa-level-down-alt" style="transform: scaleX(-1) rotate(90deg);"></i>
                                                            <i class="small">Réponse à {{ commentaire.utilisateur.nom }} {{ commentaire.utilisateur.prenom }}</i><br>

                                                            {{reponse.createdAt|date('M-Y')}}

                                                            </span>

                                                            <p class="card-text">{{reponse.commentaire}}
                                                            
                                                            </span>
                                                        </div>
                                                    </div>
                                                    {% endif %}
                                                    {% endfor %}
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                    </div>
                                </div>  
                            </div>
                        </div>     
                    </div>

                    {% endif %}
                {% endif %}
            </div>
        </div>
         
    </div>

{% endblock %}
