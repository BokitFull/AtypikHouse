{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('user_home') }}
{% endblock %}

{% block main %}
    <div id="profil-title">
        <h1>Mon profil</h1> 
        <div>
        {# {{dump(utilisateur)}} #}
            <h2> {{ utilisateur.nom }} {{ utilisateur.prenom }} </h2>
        </div>
    </div>
    <div id="card-container">
        <a href="{{ path('informations_personnelles', {'id': app.user.id } ) }}" class="displayed-card col-md-3">
            <h5>Informations personnelles</h5>
            <p>Verifier et modifier mes informations personnelles.</p>
        </a>
        <a href="{{ path('reservations') }}" class="displayed-card col-md-3">
            <h5>Mes réservations</h5>
            <p>Vérifier et modifier mes réservations.</p>
        </a>
        <a href="#" class="displayed-card col-md-3">
            <h5>Moyens de paiement</h5>
            <p>With supporting text below as a natural lead-in to additional content.</p>
        </a> 
    </div>
{% endblock %}
