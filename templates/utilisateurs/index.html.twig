{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('user_home') }}
{% endblock %}

{% block main %}
	<div id="profil-title">
		<h1>Mon profil</h1>
		<div class="user_img_div">
			<img src="/images/uploads/users/{{utilisateur.id}}.jpg" height="150px" width="150px" class="user_img">
			<h2>
				{{ utilisateur.nom }}
				{{ utilisateur.prenom }}
			</h2>
		</div>
	</div>
	<div id="card-container">
		<a href="{{ path('informations_personnelles', {'id': app.user.id } ) }}" class="data-card col-md-4">
			<h5>Informations personnelles</h5>
			<p>Verifier et modifier mes informations personnelles.</p>
		</a>
		<a href="{{ path('reservations') }}" class="data-card col-md-4">
			<h5>Mes réservations</h5>
			<p>Vérifier et modifier mes réservations.</p>
		</a>
	</div>

    <div class="fond_vert_radius"></div>

{% endblock %}
